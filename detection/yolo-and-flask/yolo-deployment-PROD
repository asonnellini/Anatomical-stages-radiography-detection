provider "aws" {
	region = "us-east-2a"
}

resource "aws_key_pair" "ec2-p2" {
  key_name   = "ec2-p2"
  public_key = "${file("ec2-p2.pub")}"
}

resource "aws_instance" "my-instance" {
	ami = "ami-01bd6a1621a6968d7"
	instance_type = "p2.xlarge"
	key_name = "${aws_key_pair.ec2-p2.key_name}"
	user_data = "${file("user_data.sh")}"
	tags = {
		Name = "Terraform"	
		Batch = "5AM"
	}
}